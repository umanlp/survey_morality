@article{10.1007/s10606-019-09357-w,
author = {Grover, Ted and Bayraktaroglu, Elvan and Mark, Gloria and Rho, Eugenia Ha Rim},
title = {Moral and Affective Differences in U.S. Immigration Policy Debate on Twitter},
year = {2019},
