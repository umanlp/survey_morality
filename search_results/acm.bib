@inproceedings{10.1007/978-3-031-05061-9_32,
author = {Becker, Stefan and Scheiner, Christian W.},
title = {The Role of&nbsp;Moral Receptors and&nbsp;Moral Disengagement in&nbsp;the&nbsp;Conduct of&nbsp;Unethical Behaviors Against Whistleblowers on&nbsp;Social Media},
year = {2022},
isbn = {978-3-031-05060-2},
