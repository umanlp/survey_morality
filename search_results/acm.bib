@phdthesis{10.5555/AAI28103841,
author = {Szczurek, Lauren},
advisor = {Beno\^{\i}t, Monin, and James, Gross, and Ling, Tsai, Jeanne},
title = {Affective Norms, Deviance, and Moral Judgment},
year = {2014},
isbn = {9798662478510},
publisher = {Stanford University},
address = {Stanford, CA, USA},
abstract = {The present research provides support for Affective Norm Theory (ANT), a new theory proposing that cultural context and situational norms interact to define both what is considered an appropriate affective display, and how observers respond to affective norm violations, or instances where the affect a person displays is inconsistent with both situational norms and observer expectations. A series of studies supports the hypotheses put forward by ANT: that in European American cultural contexts, (H1) observers notice affective deviance and (H2) negatively evaluate individuals who display deviant affect, that (H3) one reason affective displays are so powerful is because observers can use deviant displays to draw inferences about moral values, and that (H4) observers narrow the range of affective expressions they find appropriate in response to a stimulus when they interpret it as having moral content. Discussion focuses on the role of beliefs about the meaning of affective displays, individual difference measures, and the importance of gender and cultural context in defining and understanding affective norms and expectations.},
note = {AAI28103841}
}

@article{10.1007/s10458-021-09543-5,
author = {Mosca, Francesca and Such, Jose},
title = {An Explainable Assistant for Multiuser Privacy},
year = {2022},
issue_date = {Apr 2022},
publisher = {Kluwer Academic Publishers},
address = {USA},
volume = {36},
number = {1},
issn = {1387-2532},
url = {https://doi.org/10.1007/s10458-021-09543-5},
doi = {10.1007/s10458-021-09543-5},
abstract = {Multiuser Privacy (MP) concerns the protection of personal information in situations where such information is co-owned by multiple users. MP is particularly problematic in collaborative platforms such as online social networks (OSN). In fact, too often OSN users experience privacy violations due to conflicts generated by other users sharing content that involves them without their permission. Previous studies show that in most cases MP conflicts could be avoided, and are mainly due to the difficulty for the uploader to select appropriate sharing policies. For this reason, we present ELVIRA, the first fully explainable personal assistant that collaborates with other ELVIRA agents to identify the optimal sharing policy for a collectively owned content. An extensive evaluation of this agent through software simulations and two user studies suggests that ELVIRA, thanks to its properties of being role-agnostic, adaptive, explainable and both utility- and value-driven, would be more successful at supporting MP than other approaches presented in the literature in terms of (i) trade-off between generated utility and promotion of moral values, and (ii) users’ satisfaction of the explained recommended output.},
journal = {Autonomous Agents and Multi-Agent Systems},
month = {apr},
numpages = {45},
keywords = {User study, Explainable agent, Multiuser privacy, Agent-based simulations}
}

@phdthesis{10.5555/AAI28026140,
author = {Bach, Michelle C. and Kornu, Kimbell and Kinghorn, Warren},
advisor = {P, Bishop, Jeffrey},
title = {Disorder and Beauty: Personality Pathology, Aesthetics, and New Ethical Resources in the Practice of Psychiatry},
year = {2020},
isbn = {9798664771626},
publisher = {Saint Louis University},
address = {USA},
abstract = {Personality disorder diagnostic concepts are plagued by controversy, vague nosology, and weak empirical data. Nonetheless, personality disorders are diagnosed with astounding frequency and ubiquity and with substantial consequences for patients. In this dissertation, I draw from ethics, philosophy of medicine, history of philosophy, and aesthetics to explain how personality disorders remain tenacious, compelling concepts despite their weaknesses. An extended philosophical examination of personality disorder concepts demonstrates that these diagnoses are indebted to medical, moral, and aesthetic values. I further argue that personality disorder concepts approximate diagnoses of the self. Therefore psychiatry, in diagnosing personality disorders, articulates a thin moral consensus regarding modern, Western selfhood that is indebted to a particular history of ethical, theistic, scientific, and aesthetic commitments. My research demonstrates the radical cultural specificity of personality pathology. Furthermore, efforts to reduce personality disorder nosology to the strictly scientific are doomed to failure because they inappropriately truncate our concept of self. Rather than denying the value-ladenness of personality pathology, I argue that psychiatry ought to embrace its aesthetic and moral values as potential (albeit dangerously powerful) resources for care and healing.},
note = {AAI28026140}
}

@inproceedings{10.1007/978-3-319-07863-2_11,
